{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('assets/img/todolist_content.jpg') }}"
                           alt="todo list">{% endblock %}

{% block body %}

	<div class="pagination">
		{% if currentPage > 1 %}
			<a href="{{ path('task_list', {'page': currentPage - 1}) }}">Previous</a>
		{% endif %}
		{% if currentPage < totalPages %}
			<a href="{{ path('task_list', {'page': currentPage + 1}) }}">Next</a>
		{% endif %}
	</div>

	<div class="row mt-3">
		{% for task in tasks %}
			<div class="col-md-4 col-12 mb-3">
				<div class="card h-100">
					<div class="card-body">
						<h5 class="card-title"><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a>
						</h5>
						<h6 class="card-subtitle mb-2 text-body-secondary">Created
							by: {{ task.user.username | default('Anonymous') }} at: {{ task.createdAt|date('Y-m-d H:i:s') }}</h6>
						<p class="card-text">{{ task.content }}</p>
					</div>
					<div class="card-footer mb-0">
						<a href="{{ path('task_delete', {'id' : task.id }) }}"
						   class="btn btn-danger btn-sm">Delete</a>
						{% if task.isDone == false%}
							<a href="{{ path('task_toggle', {'id' : task.id }) }}"
							   class="btn btn-success btn-sm">Click to mark as done</a>
						{% else %}
							<a href="{{ path('task_toggle', {'id' : task.id }) }}"
							   class="btn btn-secondary btn-sm">Click to mark as to do</a>
						{% endif %}
					</div>
				</div>
			</div>

		{% else %}
			<div class="alert alert-warning mt-3" role="alert">
				There are no tasks yet.
			</div>
		{% endfor %}
	</div>
{% endblock %}
